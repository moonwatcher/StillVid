{
    "profile":{
        "default":{
            "pack":{
                "frame per second":8,
                "codec":"huffyuv"
            },
            "transcode":{
                "--loose-anamorphic":null,
                "--quality":"20",
                "--encoder":"x264",
                "--encopts":"mixed-refs=1:ref=3:bframes=3:me=umh:b-adapt=2:trellis=0:b-pyramid=none:subme=9:vbv-maxrate=5500:vbv-bufsize=5500:cabac=1"
            }
        },
        "hourly":{
            "pack":{
                "frame per second":8,
                "codec":"huffyuv"
            },
            "transcode":{
                "--loose-anamorphic":null,
                "--quality":"20",
                "--encoder":"x264",
                "--encopts":"mixed-refs=1:ref=3:bframes=3:me=umh:b-adapt=2:trellis=0:b-pyramid=none:subme=9:vbv-maxrate=5500:vbv-bufsize=5500:cabac=1",
                "--maxWidth":"480"
            }
        },
        "daily":{
            "pack":{
                "frame per second":8,
                "codec":"huffyuv"
            },
            "transcode":{
                "--loose-anamorphic":null,
                "--quality":"18",
                "--encoder":"x264",
                "--encopts":"mixed-refs=1:ref=3:bframes=3:me=umh:b-adapt=2:trellis=0:b-pyramid=none:subme=9:vbv-maxrate=5500:vbv-bufsize=5500:cabac=1"
            }
        }
    },
    "camera":{
        "nixon":{
            "location":{
                "watch directory":"/home/nixon/camera/watch",
                "buffer directory":"/home/nixon/camera/buffer",
                "temp directory":"/home/nixon/camera/temp",
                "product directory":"/media/purple/camera/product",
                "database":"/home/nixon/camera/db/db.json"
            },
            "default":{
                "profile":"default"
            }
        }
    }
}
